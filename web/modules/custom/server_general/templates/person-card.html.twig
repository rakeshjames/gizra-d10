{#
/**
 * @file
 * Template for the Person card component.
 *
 * Variables:
 * - name: The person's name
 * - role: The person's role
 * - description: The person's description
 * - image: URL to the person's image (optional)
 */
#}
<div class="person-card bg-white rounded-lg shadow-sm" style="width: 344px; height: 366px;">
  <div class="flex flex-col space-y-10" style="width: 344px; height: 312px; padding: 32px;">
    <div class="flex justify-center">
      <div style="width: 128px; height: 128px;">
        {% if image %}
          <img src="{{ image }}" alt="{{ name }}" class="object-cover" style="width: 128px; height: 128px; border-radius: 64px;">
        {% else %}
          <div class="bg-gray-100 flex items-center justify-center" style="width: 128px; height: 128px; border-radius: 64px;">
            <svg class="text-gray-300" style="width: 64px; height: 64px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="flex flex-col space-y-2 items-center mx-auto" style="width: 280px; height: 80px;">
      <h3 class="font-medium text-center text-gray-900 m-0" style="width: 280px; height: 20px; font-family: Inter, sans-serif; font-size: 14px; line-height: 20px;">{{ name }}</h3>
      <p class="text-center text-gray-500 m-0" style="width: 280px; height: 20px; font-family: Inter, sans-serif; font-size: 14px; line-height: 20px;">{{ role }}</p>
      <div class="inline-flex px-2 rounded-full bg-green-50">
        <span class="text-green-700" style="font-family: Inter, sans-serif; font-size: 14px; line-height: 20px;">{{ description }}</span>
      </div>
    </div>
  </div>

  <div class="w-full h-px bg-gray-200"></div>

  <div class="flex" style="height: 53px;">
    <a href="mailto:{{ email|default('jane.cooper@example.com') }}"
       class="flex items-center justify-center gap-2 border-r border-gray-200 rounded-bl-lg hover:bg-gray-50 transition-colors duration-200 no-underline text-gray-700"
       style="width: 171.5px; height: 53px; padding-top: 17px; padding-bottom: 16px;"
       title="Send email">
      <svg class="text-gray-400" style="width: 20px; height: 20px;" viewBox="0 0 20 20" fill="currentColor">
        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
      </svg>
      <span class="font-medium" style="font-family: Inter, sans-serif; font-size: 14px; line-height: 20px;">Email</span>
    </a>
    <a href="tel:{{ phone|default('+1234567890') }}"
       class="flex items-center justify-center gap-2 rounded-br-lg hover:bg-gray-50 transition-colors duration-200 no-underline text-gray-700"
       style="width: 171.5px; height: 53px; padding-top: 17px; padding-bottom: 16px;"
       title="Call">
      <svg class="text-gray-400" style="width: 20px; height: 20px;" viewBox="0 0 20 20" fill="currentColor">
        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
      </svg>
      <span class="font-medium" style="font-family: Inter, sans-serif; font-size: 14px; line-height: 20px;">Call</span>
    </a>
  </div>
</div>
